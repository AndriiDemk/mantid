<?xml version='1.0' encoding='ASCII'?>
<instrument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.mantidproject.org/IDF/1.0" last-modified="2018-04-26 11:23:20.975212" name="SANS-1_MLZ" valid-from="2017-10-01 23:59:59" valid-to="2100-01-31 23:59:59" xsi:schemaLocation="http://www.mantidproject.org/IDF/1.0 http://schema.mantidproject.org/IDF/1.0/IDFSchema.xsd">
  <!-- This is the instrument definition file of the SANS-1 small angle scattering instrument at MLZ.

       z axis defines the direction of the beam
       y axis will be the axis used for rotation
       coordinate system is right-handed

       rotation around x axis: phi (?)
       rotation around y axis: omega
       rotation around z axis: chi (?)

       Multi-detector:
       Size 1024 mm x 1024 mm
       Low resolution:
            128 x 128
            Pixel size 8 x 8 mm2

       For more information, please visit
       https://www.mlz-garching.de/sans-1
       -->
  <defaults>
    <length unit="metre"/>
    <angle unit="degree"/>
    <reference-frame>
      <along-beam axis="z"/>
      <pointing-up axis="y"/>
      <handedness val="right"/>
    </reference-frame>
  </defaults>
  <!--SOURCE-->
  <component type="chopper">
    <location x="0.0" y="0.0" z="-23.95"/>
  </component>
  <type is="Source" name="chopper"/>
  <!--Sample position-->
  <!--would the sample be always at z=0 by definition? or is 0 the place where the sample is in the ideal case?-->
  <component type="sample_position">
    <location x="0.0" y="0.0" z="0.0"/>
  </component>
  <type is="SamplePos" name="sample_position"/>
  <!-- MONITORS-->
  <component idlist="monitors" type="monitors">
    <location/>
  </component>
  <type name="monitors">
    <component type="monitor">
      <location name="monitor1" z="-24.80"/>
      <location name="monitor2" z="-24.43"/>
    </component>
  </type>

  <type is="monitor" name="monitor">
    <cylinder id="cyl-approx">
      <centre-of-bottom-base p="0.0" r="0.0" t="0.0"/>
      <axis x="0.0" y="0.0" z="1.0"/>
      <radius val="0.01"/>
      <height val="0.03"/>
    </cylinder>
    <algebra val="cyl-approx"/>
  </type>
  
  <!--MONITOR SHAPE-->
  <!--the monitors should be shapeless or point-like-->
  <!--MONITOR IDs-->
  <idlist idname="monitors">
    <id val="100000"/>
    <id val="100001"/>
  </idlist>
  <!--DETECTOR -->
  <!--this is just the low resolution to start with-->
  <!-- <component idfillbyfirst="y" idstart="0" idstepbyrow="128" type="tube detector"> -->
  <component idfillbyfirst="y" idstart="0" idstepbyrow="128" type="detector">
    <location x="0.0" y="0.0" z="0.0"/> <!--z has to be read from the data file-->
  </component>
  <!-- <type is="rectangular_detector" name="tube detector" type="tube pixel" xpixels="128" xstart="-0.512" xstep="0.008" ypixels="128" ystart="-0.512" ystep="0.008"/> -->
  <type is="rectangular_detector" name="detector" type="pixel" xpixels="128" xstart="-0.512" xstep="0.008" ypixels="128" ystart="-0.512" ystep="0.008"/>
  
  <!--PIXEL, EACH PIXEL IS A DETECTOR-->
  <!-- <type is="detector" name="tube pixel">
    <cylinder id="pixel-shape">
      <centre-of-bottom-base r="0.0" t="0.0" p="0.0"/>
      <axis x="0.0" y="1.0" z="0.0"/>
      <radius val="0.007324"/>
      <height val="0.008"/>
    </cylinder>
  </type> -->
  <type is="detector" name="pixel">
    <cuboid id="pixel-shape">
      <left-front-bottom-point x="-0.1" y="-0.1" z="1."/>
      <left-front-top-point x="-0.1" y="0.1" z="1."/>
      <left-back-bottom-point x="-0.1" y="-0.1" z="-1."/>
      <right-front-bottom-point x="0.1" y="-0.1" z="1."/>
    </cuboid>
    <algebra val="pixel-shape"/>
  </type>
</instrument>

